{% extends 'base.html.twig' %}
{% block body %}

    <!-- ##### Breadcumb Area Start ##### -->
    <section class="breadcumb-area bg-img" style="background-image: url(/img/bg-img/hero1.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcumb-content">
                        <h3 class="breadcumb-title">Location</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Breadcumb Area End ##### -->
    {% for resultat in resultats %}
    <!-- ##### Listings Content Area Start ##### -->
    <section class="listings-content-wrapper section-padding-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <!-- Single Slide -->
                    <img src="{{ resultat.image }}" alt="">
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <div class="listings-content">
                        <!-- Price -->
                        <div class="list-price">
                            <p>{{ resultat.prixparnuit }} € par nuit</p>
                        </div>
                        <h5>{{resultat.libelle}} à {{ resultat.nomville }}</h5>
                        <p class="location"><img src="/img/icons/location.png" alt="">{{ resultat.adressebien }}</p>
                        <p>{{ resultat.description }}</p>
                        <!-- Meta -->
                        <div class="property-meta-data d-flex align-items-end">
                            <div class="new-tag">
                                <span><strong>{{ resultat.nbplaces }} personnes maximum</strong></span>
                            </div>
                            <div class="space">
                                <img src="/img/icons/space.png" alt="">
                                <span><strong>{{ resultat.superficiebien }} m²</strong></span>
                            </div>
                        </div>
                        <br>

                        {{ form_start(formValider) }}
                            
                                <div class="form-group">
                                    <div class="range">Date d'arrivée :</div>
                                    {{ form_widget(formValider.dateArrivee) }}
                                </div>
                            

                            
                                <div class="form-group">
                                    <div class="range">Date de départ :</div>
                                    {{ form_widget(formValider.dateDepart) }}
                                </div>

                                {{ form_widget(formValider._token) }}
                            

                            <!-- Listings Btn Groups -->
                            <div class="listings-btn-groups">
                                <center>{{ form_widget(formValider.valider) }} </center>
                            </div>
                        {{ erreur }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Listings Content Area End ##### -->
{% endfor %}

{% endblock %}