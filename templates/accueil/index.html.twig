{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<!-- ##### Hero Area Start ##### -->
    <section class="hero-area">
            <!-- Single Hero Slide -->
            <div class="single-hero-slide bg-img" style="background-image: url(img/bg-img/loft.jpg);">
                <div class="container h-100">
                    <div class="row h-100 align-items-center">
                        <div class="col-12">
                            <div class="hero-slides-content">
                                <h2>Trouvez la location de vos rêves</h2><br>
                                {% if not mail %}
                                <h2 class="wow fadeInUp" data-wow-delay="300ms" style="font-size: 16px;">Commencez par vous créer un compte</h2> <br>
                                <a href="{{ path('inscription') }}" class="btn south-btn mt-50 wow fadeInUp" data-wow-delay="500ms">Inscription</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>     
    </section>
    <!-- ##### Hero Area End ##### -->

    <!-- ##### Advance Search Area Start ##### -->
    <div class="south-search-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="advanced-search-form">
                        <!-- Search Title -->
                        <div class="search-title">
                            <p>Cherchez une location</p>
                        </div>
                        <!-- Search Form -->
                        {{ form_start(formRecherche) }}
                            <div class="row">
                                <div class="col-12 col-md-4 col-lg-3">
                                    <div class="form-group">
                                    <div class="range">Ville :</div>
                                        {{ form_widget(formRecherche.ville) }}
                                    </div>
                                </div>

                                <div class="col-12 col-md-4 col-lg-3">
                                    <div class="form-group">
                                    <div class="range">Nombre de personnes :</div>
                                        {{ form_widget(formRecherche.nbPlaces) }}
                                    </div>
                                </div>

                                <div class="col-12 col-md-4 col-lg-3">
                                    <div class="form-group">
                                    <div class="range">Type de location :</div>
                                        {{ form_widget(formRecherche.typeBien) }}
                                    </div>
                                </div>

                                <div class="col-12 col-md-4 col-lg-3">
                                    <div class="form-group">
                                    <div class="range">Date d'arrivée :</div>
                                        {{ form_widget(formRecherche.dateArrivee) }}
                                    </div>
                                </div>

                                <div class="col-12 col-md-4 col-lg-3">
                                    <div class="form-group">
                                    <div class="range">Date de départ :</div>
                                        {{ form_widget(formRecherche.dateDepart) }}
                                    </div>
                                </div>

                                <div class="col-12 col-md-4 col-lg-3">
                                    <div class="form-group">
                                    <div class="range">Superficie entre :</div>
                                        {{ form_widget(formRecherche.superficieMin) }}
                                    </div>
                                </div>

                                <div class="col-12 col-md-4 col-lg-3">
                                    <div class="form-group">
                                    <div class="range">Et :</div>
                                        {{ form_widget(formRecherche.superficieMax) }}
                                    </div>
                                </div>
                            </div>
                            <!-- Submit -->
                            <div class="form-group mb-0">
                                <center>{{ form_widget(formRecherche.valider) }} </center>
                            </div>
                        {{ form_end(formRecherche) }}
                        <div class="form-group" style="color: red;">
                            <br><br>
                            <center>{{ erreur }}</center>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Advance Search Area End ##### -->

    <!-- ##### Featured Properties Area Start ##### -->
    <section class="featured-properties-area section-padding-100-50">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-heading wow fadeInUp">
                        <h2>Quelques locations</h2>
                    </div>
                </div>
            </div>

            <div class="row">
                {% for bienRand in biensRandom %}
                <!-- Single Featured Property -->
                    <div class="col-12 col-md-6 col-xl-4">
                        <div class="single-featured-property mb-50 wow fadeInUp" data-wow-delay="600ms">
                            <!-- Property Thumbnail -->
                            <div class="property-thumb">
                                <img src="{{ bienRand.image }}" alt="">

                                <div class="list-price">
                                    <p>{{ bienRand.prixparnuit }} € par nuit</p>
                                </div>
                            </div>
                            <!-- Property Content -->
                            <div class="property-content">
                                <h5>{{ bienRand.libelle }} à {{ bienRand.nomville }}</h5>
                                <p class="location"><img src="img/icons/location.png" alt="">{{ bienRand.adressebien }}</p>
                                <p>{{ bienRand.description }}</p>
                                <div class="property-meta-data d-flex align-items-end justify-content-between">
                                    <div class="new-tag">
                                        <span>{{ bienRand.nbplaces }} personnes max</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- ##### Featured Properties Area End ##### -->

{% endblock %}
