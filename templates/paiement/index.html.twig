{% extends 'base.html.twig' %}
{% block body %}
<!-- ##### Breadcumb Area Start ##### -->
    <section class="breadcumb-area bg-img" style="background-image: url(/img/bg-img/hero1.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcumb-content">
                        <h3 class="breadcumb-title">Paiement</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Breadcumb Area End ##### -->

    <section class="south-contact-area section-padding-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="contact-heading">
                        <center><h6 style="font-size: 25px;">Procédez au paiement</h6></center>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Editor Area Start ##### -->
    <section class="south-editor-area d-flex align-items-center">
        <!-- Editor Content -->
        <div class="editor-content-area">
            <!-- Section Heading -->
            <div class="section-heading wow fadeInUp" data-wow-delay="250ms">
                <h2>{{ location.bien.adressebien }}</h2>
                <p>du {{location.datearrivee}} au {{location.datedepart}}</p>
                <br>
                <h5 style="text-align: right;">SOUS-TOTAL :</h5>
                <h6 style="text-align: right;">{{80/100 * location.prix}} €</h6>
                <br>
                <br>
                <h5 style="text-align: right;">TOTAL (+ TVA) :</h5>
                <h6 style="text-align: right;">{{location.prix}} €</h6>
            </div>
            <div class="address wow fadeInUp" data-wow-delay="750ms">
            {{ form_start(formPaiement) }}
                {{ form_widget(formPaiement.payer) }}
            {{ form_end(formPaiement) }}
            </div>
        </div>

        <!-- Editor Thumbnail -->
        <div class="editor-thumbnail">
            <img src="{{ location.bien.image }}" alt="">
        </div>
    </section>
    <!-- ##### Editor Area End ##### -->

{% endblock %}